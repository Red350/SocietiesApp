<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ie.dit.societiesapp.SocietiesListFragment">

    <AutoCompleteTextView
        android:id="@+id/chair_add_field"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10" />

    <Button
        android:id="@+id/chair_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Add Committee"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <AutoCompleteTextView
        android:id="@+id/chair_delete_field"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10" />

    <Button
        android:id="@+id/chair_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Delete Committee"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>
